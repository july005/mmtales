<div>
	<%= form_for @contact do |f| %>

			<%= f.text_area :message, as: :text, :id => "contactme", class: 'form-control', rows: 4, :value => "Dear Monorails & Mickey Tales: ", :onfocus => "this.value = this.value;" %>

			<br>

		<div class="row">
			
			<div class="form-group col-xs-6">
				<%= f.text_field :name, required: true, :id => "contactme", class: 'form-control', :placeholder => "Name" %>
				<br>
			</div>

			<div class="form-group input-group add-on">
				<%= f.email_field :email, required: true, :id => "contactme", class: 'form-control', :placeholder => "Email"  %>
					<div class="input-group-btn">
						<button type="submit" class="btn btn-info" name="submit" id="submit" value="send"><i class="fa fa-envelope"></i> Send</button>
					</div>
			</div>

		</div>

		<div class="hidden">
			<%= f.label :nickname %>
			<%= f.text_field :nickname, hint: 'leave this field blank' %>
		</div>

	<% end %>
</div>	

<script>
var contactmeInput = $('#contactme');
contactmeInput.val(contactmeInput.val());
var strLength= contactmeInput.val().length;
contactmeInput.focus();
contactmeInput[0].setSelectionRange(strLength, strLength);
</script>
