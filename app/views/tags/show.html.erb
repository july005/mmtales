<div class="container">
	<div class="jumbotron">
		<h1>Topic:<strong> <%= @tag.name.downcase %> </strong></h1>
		<hr>
		<div id="posts" class="transitions-enabled"> 
		  <% @posts.each do |post| %>
		    <div class="box panel panel-default">
		    	<%= link_to image_tag(post.image.url(:small)), post%>
		      <div class="panel-body">
		        <p><%= post.title %></p>
		      </div>
		    </div>
		  <% end %>
		</div>
		<%= link_to 'Back', posts_path, class: "btn btn-success btn-lg" %>
	</div>
</div>

