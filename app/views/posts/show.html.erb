
<p id="notice"><%= notice %></p>

<%= render 'layouts/navbar' %> 
<div class="container">
  

    <div class="Grid">
      <div class="Grid--1ofX">
        <%= image_tag @post.image.url(:xlarge), :class => "center-block" %> 
      </div>
     </div>

    <h1 class="nobootstrap"><%= @post.title %></h1>
     <h2 class="posts"><%= @post.subtitle %><br><br></h2>
    <div class="froala-view"><%= @post.body.html_safe %></div>
      <hr>
    <div class="row">
      <h3 class="postshow">
        <strong>Topics:</strong> 
         <%= render @post.tags %> 
         <%= social_share_button_tag(@post.title) %> 
       </h3>
    </div>

  
  <hr>

  <!-- Recent posts -->
    <%= render 'otherrecent' %>
    <hr>
    <%= link_to 'Back', posts_path, class: 'btn btn-info btn-lg' %>
    <hr>
  <!-- Comments -->   
    
    <%= render 'disqus' %>
    

  <!-- Code for related posts would go here -->
    
    </div>

    <% if @post.user == current_user %>   
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Destroy', @post, class: 'btn btn-danger btn-lg', method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

    

  </div>
</div>









