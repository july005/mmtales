<div class="container">
    <div class="col-md-12">
        <div class="row">
            
            <% if @recent_posts.present? %>
                
                <h1 class="sectionhead">Recent Answers</h1><br>
                
                <div id="topics" class="topics transitions-enabled"> 

                    <% @recent_posts.each do |post| %>
                        <div class="box1 panel panel-default">
                            <%= link_to image_tag(post.image.url(:small)), post %>
                            <div class="panel-body">
                                <p class="recentpost"><%= link_to post.title, post %></p>
                            </div>
                        </div>
                    <% end %>

                </div>
                
                <br>

            <% end %>



        </div>
    </div>
</div>
