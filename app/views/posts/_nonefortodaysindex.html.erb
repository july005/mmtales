<div class="container">
    <div class="col-md-12">
        <div class="row">
            <% if @recent_posts.present? %>
            <div class="col-md-7">
                    <%= link_to post_path(@recent_posts.last) do %>
                    <%= image_tag @recent_posts.last.image.url, :class => "img-responsive" %>
                    <% end %>
            </div>
            <div class="col-md-5">
                
                <!--OLD JAVASCRIPT CLASS FOR THIS HEADING: <h2 class="h2_home wow fadeIn"></h2>
                ALSO WOULD BE NICE IF THE PHOTO SWITCHED WHEN YOU HOVER BETWEEN POST TITLES-->

                <h1 class="nobootstrap">Recent Answers</h1>
                <hr>
                    <% @recent_posts.each do |post| %>
                        <p class="lead" style="margin-top:0">
                            <%= link_to post.title, post_path(post) %>
                        </p>
                        <hr>
                    <% end %>
            <% end %>

            </div> 
            <br>
        </div>
    </div>
</div>
