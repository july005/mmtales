<div class="container">
    <br><br>
            <% if @recent_posts.present? %>

                    <!-- loops through all @recent_posts -->
                   
                        <% @recent_posts.each do |post| %>
                             <div class="row">
                                <div class="col-md-4">
                                    <div class="Grid">
                                        <div class="Grid--1ofX">
                                            <%= link_to image_tag(post.image.url(:xlarge)), post %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <h2 class="postsindex"><%= link_to post.title, post %></h2>
                                    <p class="recentpost"><%= link_to truncate(post.subtitle, length:250), post %></p>
                                    <hr>
                                    <p><span class="highlight"><%= render post.tags %></span></p> 
                                </div>
                            </div>
                            <hr>
                        <% end %>
                <br>
            <% end %>        
</div>
