              </div>
            </div>

            <div class="box panel panel-default">
              <h1><i class="fa fa-rocket" aria-hidden="true"></i></h1>
              <div class="panel-body">
                <p class="lead"><%= link_to 'Parks', tags_show_path(id:17) %></p>
              </div>
            </div>

            <div class="box panel panel-default">
              <h1><i class="fa fa-cutlery" aria-hidden="true"></i></h1>
              <div class="panel-body">
                <p class="lead"><%= link_to 'Transport', posts_path %></p>
              </div>
            </div>

            <div class="box panel panel-default">
              <h1><i class="fa fa-cutlery" aria-hidden="true"></i></h1>
              <div class="panel-body">
                <p class="lead"><%= link_to 'All', tags_index_path %></p>
              </div>
            </div>

            <div class="box panel panel-default">
              <h1><i class="fa fa-cutlery" aria-hidden="true"></i></h1>
              <div class="panel-body">
                <p class="lead"><%= link_to 'Resorts', posts_path %></p>
              </div>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- End TOPICS -->

      
<!-- SEARCH box -->
<div class="section answers">
  <span id="screen" class="anchor"></span>
    <div class="container">
      <h1 class="sectionhead">Find <i class="fa fa-search" aria-hidden="true"></i></h1>

      <h2 class="float_center">
        <%= form_tag(posts_search_path, method: "get") do %>
          <%= text_field_tag(:query) %>
          <h1 class="nobootstrap"><%= submit_tag("Search", class: "btn btn-primary btn-lg") %></h1>
        <% end %>
      </h2>
    </div>
  </div>
</div>

