<!-- End Contact Me -->

<!-- Today's Answers -->

<div class="section answers">
  <span id="useit" class="anchor"></span>
    <div class="container">
      <div class="row wow bounceInUp" >
        <br>
        <% if @todays_posts.exists? %>
          <%= render 'todaysindex' %>   
          <% else %>
          <%= render 'nonefortodaysindex' %>
        <% end %>
        <br>
      </div>
    </div>
  </div> 

<hr>

